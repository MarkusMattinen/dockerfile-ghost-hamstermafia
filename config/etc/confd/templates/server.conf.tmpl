# /etc/nginx/server.conf

server {
    listen [::]:5000 ipv6only=off;
    server_name {{ .vhost }};

    more_set_headers "X-Frame-Options: DENY";
    more_set_headers "Access-Control-Allow-Origin: https://{{ .vhost }}";

    location / {
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:5001;
    }
}
